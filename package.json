{
  "name": "exercise-code-nodejs",
  "version": "1.0.0",
  "description": "This repository contains the code / starting points that match the topics in the [material repository](https://github.tools.sap/cloud-curriculum/material).",
  "type": "module",
  "scripts": {
    "test": "mocha --recursive",
    "coverage": "c8 --check-coverage --lines 95 --functions 100  --branches 85 --statements 95 --reporter=lcov --reporter=text mocha",
    "lint": "eslint .",
    "db:start": "docker run --rm --name test-postgres -p 5432:5432 -e POSTGRES_PASSWORD=pw -d postgres",
    "db:migrate": "ts-node src/lib/migrate.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.tools.sap/cloud-curriculum/exercise-code-nodejs.git"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.8",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "c8": "^7.13.0",
    "eslint": "^8.5.0",
    "mocha": "^9.2.2",
    "node-duration": "^1.0.4",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.3.0",
    "express": "^4.17.1",
    "pg": "^8.10.0"
  },
  "engine": {
    "node": ">=16"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": [
      "test/**/*.test.ts"
    ],
    "node-option": [
      "experimental-loader=ts-node/esm",
      "no-warnings"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "test"
    ],
    "ext": "js,json,ts"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/eslint-recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-trailing-spaces": "warn",
      "eol-last": [
        "error",
        "always"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2,
          "maxEOF": 1
        }
      ],
      "quotes": [
        "error",
        "single"
      ]
    },
    "ignorePatterns": [
      "dist"
    ],
    "root": true
  }
}
